
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/_LayoutPageChung.cshtml";
}
@model NhomAhoi_QLBanSach.Models.Sach
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<h2>CHI TIẾT SẢN PHẨM</h2>
<div class="card border-dark">
    <table class="border-dark mx-3 mb-3 mt-3">
        <tr class="text-left">
            <td rowspan="5" width="45%">
                <img class="card-header" src="@Url.Content("~/HinhAnhSP/"+Model.AnhBia)" width="100%" height="100%" alt="Image">
            </td>
            <td width="20%" >
                Tên Sách:
            </td>
            <td width="35%" style="font-weight:bold; color:blue">
                @Model.TenSach
            </td>
        </tr>
        <tr class="text-left">
            <td>Tên Chủ Đề:</td>
            <td style="color:blue">@Model.ChuDe.TenChuDe</td>
        </tr>
        <tr class="text-left">
            <td>Tên NXB:</td>
            <td style="color:blue">@Model.NhaXuatBan.TenNXB</td>
        </tr>
        <tr class="text-left">
            <td>Nội dung tóm tắt:</td>
            <td class="text-justify">@Model.MoTa</td>
        </tr>
        <tr class="text-left">
            <td>Giá bán:</td>
            <td style="font-weight:bold; color:red">@String.Format("{0:0,0}", @Model.GiaBan) VNĐ</td>
        </tr>
        <tr>
            <td colspan="2" class="pt-3">
                <form method="post"
                      action="@Url.Action("ThemGioHang", "GioHang", new { @ms = Model.MaSach, @strURL = Request.Url.ToString() })">
                    <input type="submit" value="THÊM VÀO GIỎ HÀNG" class="btn btn-success" />
                </form>
                <form method="post"
                      action="@Url.Action("SachPartial", "Sach", new { @ms = Model.MaSach, @strURL = Request.Url.ToString() })">
                    <input type="submit" value="MUA TIẾP SÁCH KHÁC" class="btn btn-primary mt-2" />
                </form>
            </td>
        </tr>
    </table>
</div>




