@using NhomAhoi_QLBanSach.Models;
@model List<Sach>
@{
    ViewBag.Title = "SachPartial";
    Layout = "~/Views/Shared/_LayoutPageChung.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

<h1>LIST SÁCH</h1>
<div class="row"> 
    @{foreach(var item in Model)
      {
          <div class="col-4">
              <img src="@Url.Content("~/HinhAnhSP/"+item.AnhBia)" width="70%" height="70%" alt="Image">
              @if (item.TenSach.Length > 30)
              {
                  <p>
                      <strong title="@item.TenSach">Tiêu đề: @item.TenSach.Substring(0, 30)...</strong><br />
                      <a href="~/Sach/XemChiTiet?ms=@item.MaSach">Xem chi tiết</a>
                  </p>
              }
              else
              {
                  <p>
                      <strong title="@item.TenSach">Tiêu đề: @item.TenSach</strong><br />
                      <a href="~/Sach/XemChiTiet?ms=@item.MaSach">Xem chi tiết</a>
                  </p>
                  <div class="clear"></div>
              }
          </div>
      }
     }
</div>


